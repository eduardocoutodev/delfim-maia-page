---
import TeamMemberPage from "@/components/Team/TeamMemberPage.astro";
import Layout from "@/layouts/Layout.astro";
import "@/styles/globals.css";
import type { TeamMember } from "@/types/TeamMember";
import { delay } from "@/utils/utils";

export async function getStaticPaths() {
  const builderAPIpublicKey = import.meta.env.BUILDER_API_PUBLIC_KEY;

  const isProduction = import.meta.env.PROD;

  if (isProduction) {
    // Force the delay of request to CMS to wait 45 seconds because CMS takes some seconds to refresh data.
    await delay(45000);
  }

  const response = await fetch(
    `https://cdn.builder.io/api/v3/content/team-members?apiKey=${builderAPIpublicKey}`,
  ).then((res) => res.json());

  if (!response.results) {
    throw new Error(`Builder.io API error: ${JSON.stringify(response)}`);
  }

  const dataTeamMembers: TeamMember[] = response.results[0].data.teamMembers;

  const paths = dataTeamMembers.map((teamMember, index) => {
    return {
      params: { member: teamMember.teamMemberId },
      props: { teamMember, teamMemberIndex: index },
    };
  });

  return paths;
}

const teamMember: TeamMember = Astro.props.teamMember;
const {
  name,
  email,
  image,
  cpEn,
  pageColor,
  formationsEn,
  preferencesAreaEn,
  roleEn,
} = teamMember;

const formations:
  | {
      formationItem: string;
    }[]
  | undefined = formationsEn?.map((formation) => {
  return { formationItem: formation.formationsEnItem };
});

const preferencesArea:
  | {
      preferenceaAreaItem: string;
    }[]
  | undefined = preferencesAreaEn?.map((preferenceArea) => {
  return { preferenceaAreaItem: preferenceArea.preferenceaAreaItemEn };
});
---

<Layout title={name}>
  <TeamMemberPage
    name={name}
    email={email}
    image={image}
    cp={cpEn}
    formations={formations}
    preferencesArea={preferencesArea}
    pageColor={pageColor}
    role={roleEn}
  />
</Layout>
